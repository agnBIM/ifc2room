        <Button Content="Start" Margin="559,173,0,0" Click="Button_Click" HorizontalAlignment="Left" Width="73" Height="28" VerticalAlignment="Top"/>
        <ComboBox x:Name="comboViewFam" ToolTip="Choose viewfamilytype for room-boundary placement" Margin="128,114,0,0" VerticalAlignment="Top" Height="28" HorizontalAlignment="Left" Width="504"/>
        <Image x:Name="logo2" Height="40" Margin="128,167,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="185"/>
        <Label Content="Path" HorizontalAlignment="Left" Margin="30,60,0,0" VerticalAlignment="Top" Width="66" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Label Content="ViewType" HorizontalAlignment="Left" Margin="30,114,0,0" VerticalAlignment="Top" Width="66" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Image x:Name="logo" Height="40" Margin="30,167,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="66"/>

    </Grid>

</Window>
