<Window x:Class="agn.ifc2revitRooms.appstoreWpf"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:agn.ifc2revitRooms"
             mc:Ignorable="d"
             Title="agn | ifc2room Beta"
             Style="{DynamicResource CustomTitleBar}" WindowStyle="None" MinWidth="680" MinHeight="180" Height="243.333" Width="659.333">

    <Window.Resources>
        <ResourceDictionary Source="Styles.xaml" />
    </Window.Resources>

    <Grid Background="#FF151515">
